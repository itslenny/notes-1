<!DOCTYPE html>
<html>
<head>
  <title>AngularLibApp</title>
  <!-- Go to Angular's main page
       and grab the latest and greatest CDN -->
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.12/angular.min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="BookApp">


  <div ng-controller="BooksCtrl">
  <div greeter type="mean"></div>
  <form ng-submit="addBook()">
    <div>
     <input type="text" ng-model="newBook.title">
    </div>
    <div>
      <textarea ng-model="newBook.description"></textarea>
    </div>
    <div>
      <button>Add Book</button>
    </div>
  </form> 
  {{newBook}} 

  <div ng-repeat="book in books">
    <div class="book"></div> <button ng-click="books.splice($index,1);">DELETE</button>
  </div> 
  </div>
</body>
</html>
